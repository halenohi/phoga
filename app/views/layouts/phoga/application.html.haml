!!! 5
%html{ lang: 'ja' }
  %head
    %meta{ charset: 'utf-8' }
    %title Phoga
    %link{ 'data-url' => 'http://fonts.googleapis.com/css?family=Bubbler+One', rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag 'phoga/application', media: 'screen'
    = javascript_include_tag 'phoga/application'
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-static-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'PHOGA', root_path, { class: 'navbar-brand' }
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'ログアウト', destroy_admin_session_path, { data: { method: 'delete' } }
          .nav-collapse
    .container
      .row
        .col-sm-9.col-sm-push-3
          = yield
        .col-sm-3.col-sm-pull-9
          %ul.nav.nav-pills.nav-stacked
            %li{ class: active_class([root_path, articles_path], { lefthand_match: true }) }
              = link_to articles_path do
                %i.glyphicon.glyphicon-file
                記事一覧
            %li{ class: active_class(categories_path) }
              = link_to categories_path do
                %i.glyphicon.glyphicon-folder-close
                カテゴリー
            %li{ class: active_class(tags_path) }
              = link_to tags_path do
                %i.glyphicon.glyphicon-folder-close
                タグ
