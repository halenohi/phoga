= form_for @category do |f|
  .form-group
    = f.label :name
    = f.text_field :name, { class: 'form-control', placeholder: 'カテゴリー名を入力' }

  .form-group
    = f.label :slug
    = f.text_field :slug, { class: 'form-control', placeholder: 'URL用の名称を入力(半角英数字、ハイフン、アンダースコアのみ使用可能)' }

  .form-group
    = f.submit (@category.persisted? ? '更新' : '保存'), { class: 'btn btn-primary' }
